# ============================================
# ADRES API - PRODUCTION ENVIRONMENT
# ============================================

# Aplicación
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Base de datos
ConnectionStrings__DefaultConnection=Server=sqlserver-prod.adres.local,1433;Database=AdresAuthDb;User ID=sa;Password=CAMBIAR_EN_PRODUCCION_SEGURO;TrustServerCertificate=True;Encrypt=True

# Autenticación Externa (proporcionar al proveedor de autenticación)
AUTH_AUTHORITY=https://auth.adres.gov.co
AUTH_AUDIENCE=adres-api
AUTH_USE_JWKS=true
AUTH_JWKS_URL=https://auth.adres.gov.co/.well-known/jwks.json

# URLs Frontend (CORS)
FRONTEND_URL_PRODUCTION=https://app.adres.gov.co

# URLs de Callback para el Autenticador Externo
# IMPORTANTE: Proporcionar estas URLs al proveedor de autenticación
AUTH_CALLBACK_URL=https://app.adres.gov.co/auth/callback
AUTH_LOGOUT_REDIRECT_URL=https://app.adres.gov.co
AUTH_ERROR_REDIRECT_URL=https://app.adres.gov.co/auth/error

# URLs del Backend
API_BASE_URL=https://api.adres.gov.co

# Swagger (deshabilitar en producción por seguridad)
ENABLE_SWAGGER=false
