# ===============================================
# ADRES AUTHENTICATION - DEVELOPMENT
# ===============================================

# ADRES Auth Server Configuration
AdresAuth__ServerUrl=https://auth-dev.adres.gov.co
AdresAuth__ClientId=adres-api-dev
AdresAuth__ClientSecret=your-dev-client-secret-here
AdresAuth__TokenEndpoint=/oauth/token
AdresAuth__JwksEndpoint=/.well-known/jwks.json
AdresAuth__RevokeEndpoint=/oauth/revoke
AdresAuth__IntrospectEndpoint=/oauth/introspect

# JWT Configuration
AUTH_AUTHORITY=https://auth-dev.adres.gov.co
AUTH_AUDIENCE=adres-api
AUTH_USE_JWKS=true
AUTH_JWKS_URL=https://auth-dev.adres.gov.co/.well-known/jwks.json

# SQL Server
ConnectionStrings__DefaultConnection=Server=localhost,1433;Database=AdresAuthDb;User ID=sa;Password=Your_strong_password_123;TrustServerCertificate=True;Encrypt=False

# CORS - Development
ALLOWED_CORS=http://localhost:3000,http://localhost:5173,http://localhost:4200

# Swagger - Enabled in development
ENABLE_SWAGGER=true

# Logging
LOG_LEVEL=Debug
ASPNETCORE_ENVIRONMENT=Development
