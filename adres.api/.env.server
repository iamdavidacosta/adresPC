# ===============================================
# VARIABLES DE ENTORNO - BACKEND API (SERVIDOR)
# ===============================================
# Copia este archivo a adres.api/.env en el servidor

# Entorno
ASPNETCORE_ENVIRONMENT=Production

# SQL Server (usa el contenedor)
ConnectionStrings__DefaultConnection=Server=sqlserver,1433;Database=AdresDb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True

# JWT Configuration (actualizar con tu auth server real)
AUTH_AUTHORITY=https://auth.adres.gov.co
AUTH_AUDIENCE=adres-api
AUTH_USE_JWKS=true
AUTH_JWKS_URL=https://auth.adres.gov.co/.well-known/jwks.json

# CORS Origins - SERVIDOR
ALLOWED_CORS=http://adres-autenticacion.centralspike.com,http://adres-autenticacion-back.centralspike.com

# Swagger (deshabilitado en producci√≥n)
ENABLE_SWAGGER=false

# Logging
LOG_LEVEL=Information
