# ===============================================
# VARIABLES DE ENTORNO - BACKEND API (SERVIDOR)
# ===============================================

# Entorno
ASPNETCORE_ENVIRONMENT=Production

# SQL Server (usa el contenedor)
ConnectionStrings__DefaultConnection=Server=sqlserver,1433;Database=AdresDb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True

# JWT Configuration - Autentic Sign
AUTH_AUTHORITY=https://idp.autenticsign.com
AUTH_AUDIENCE=adres-api
AUTH_USE_JWKS=true
AUTH_JWKS_URL=https://idp.autenticsign.com/.well-known/jwks.json

# Autentic Sign Authentication Service
AdresAuth__ServerUrl=https://idp.autenticsign.com
AdresAuth__ClientId=410c8553-f9e4-44b8-90e1-234dd7a8bcd4
AdresAuth__ClientSecret=
AdresAuth__AuthorizationEndpoint=/connect/authorize
AdresAuth__TokenEndpoint=/connect/token
AdresAuth__JwksEndpoint=/.well-known/jwks.json
AdresAuth__RevokeEndpoint=/connect/revocation
AdresAuth__IntrospectEndpoint=/connect/introspect
AdresAuth__UserInfoEndpoint=/connect/userinfo
# Para testing: usar callback del backend
# Para producci√≥n: usar callback del frontend
AdresAuth__RedirectUri=https://adres-autenticacion-back.centralspike.com/api/AdresAuth/callback
# AdresAuth__RedirectUri=https://adres-autenticacion.centralspike.com/auth/callback
AdresAuth__FrontendUrl=https://adres-autenticacion.centralspike.com
AdresAuth__Scopes=openid extended_profile

# CORS Origins - SERVIDOR
ALLOWED_CORS=https://adres-autenticacion.centralspike.com,https://adres-autenticacion-back.centralspike.com

# Swagger
ENABLE_SWAGGER=false

# Logging
LOG_LEVEL=Information
